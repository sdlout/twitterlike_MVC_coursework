<!-- Post Modal -->
<div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="postModalLabel">Create a new post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="postForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="postText" class="form-label">What is happening?</label>
                        <textarea class="form-control" id="postText" name="Text" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="postImageUri" class="form-label">Image URL</label>
                        <input type="text" class="form-control" id="postImageUri" name="ImageUri">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Post</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- JavaScript code integrated directly into the layout -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById('postForm').addEventListener('submit', function (event) {
            event.preventDefault();

            const formData = {
                Text: document.getElementById('postText').value,
                ImageUri: document.getElementById('postImageUri').value
            };

            fetch('/Home/CreatePost', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error('Error creating post');
                    }
                })
                .then(data => {
                    if (data.success) {
                        document.getElementById('postModal').classList.remove('show');
                        document.body.classList.remove('modal-open');
                        document.querySelector('.modal-backdrop').remove();
                        alert('Post created successfully!');
                        location.reload();
                    } else {
                        alert('Error creating post');
                    }
                })
                .catch(error => {
                    alert(error.message);
                });
        });
    });
</script>
